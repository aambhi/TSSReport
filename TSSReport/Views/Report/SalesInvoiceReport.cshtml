@model IEnumerable<TSSReport.Models.SalesInvoiceReportModel>
@{
    ViewBag.Title = "SalesnvoiceReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/scripts/vendor/jquery/jquery-3.4.1.min.js"></script>

<link href="~/scripts/vendor/datatables/datatables.min.css" rel="stylesheet" />
<script src="~/scripts/vendor/datatables/datatables.min.js"></script>
<script src="~/scripts/vendor/datatables/buttons.html5.min.js"></script>
<script src="~/scripts/vendor/datatables/dataTables.buttons.min.js"></script>
<script src="~/scripts/vendor/datatables/jszip.min.js"></script>
<script src="~/scripts/vendor/datatables/pdfmake.min.js"></script>
<script src="~/scripts/vendor/datatables/vfs_fonts.js"></script>
<link href="~/Content/datepicker/jquery-ui.min.css" rel="stylesheet" />
<script src="~/scripts/datepicker/jquery-ui.min.js"></script>
@using (Html.BeginForm("SalesInvoiceReport", "Report", FormMethod.Post, new { @id = "formControl" }))
{
    @Html.AntiForgeryToken()
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        @*<h1 class="h3 mb-2 text-gray-800">Party Master Report</h1>*@
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Sales Invoice Report</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-1">
                        <label class="control-label"><b>From Date</b></label>
                    </div>
                    <div class="col-sm-2">
                        @Html.TextBox("FromDate", "", new { @id = "FromDate", @class = "datepicker form-control", @autocomplete = "off", @placeholder = "From Date", @maxlength = "12" })
                        @Html.ValidationMessage("FromDate", "", new { @id = "ErrFromDate", @style = "color:red;" })
                    </div>

                    <div class="col-sm-1">
                        <label class="control-label"><b>To Date</b></label>
                    </div>
                    <div class="col-sm-2">
                        @Html.TextBox("ToDate", "", new { @id = "ToDate", @class = "datepicker form-control", @autocomplete = "off", @placeholder = "To Date", @maxlength = "12" })
                        @Html.ValidationMessage("", "", new { @id = "ErrToDate", @style = "color:red;" })
                    </div>
                    <div class="col-sm-1">
                        <label class="control-label"><b>LRNo</b></label>
                    </div>
                    <div class="col-sm-2">
                        @Html.TextBox("LRNo", "", new { @id = "LRNo", @class = "form-control", @autocomplete = "off", @placeholder = "LRNo", @maxlength = "12" })
                        @Html.ValidationMessage("", "", new { @id = "ErrLRNo", @style = "color:red;" })
                    </div>
                    <div class="col-sm-2">
                        <input type="submit" id="btnSearch" class="btn btn-primary" value="Search" />
                        @Html.ActionLink("Clear", "SalesInvoiceReport", "", new { @class = "btn btn-outline-secondary" })
                    </div>
                </div>
                <br />
                <div class="table-responsive">
                    <table id="datatable" class="table table-striped table-responsive table-bordered" style="width:100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>DocumentNo</th>
                                <th>DocumentDate</th>
                                <th>CustomerName</th>
                                <th>ChallanNo</th>
                                <th>PaymentStatus</th>
                                <th>ConsignmentNo</th>
                                <th>FileNo</th>
                                <th>Description</th>
                                <th>Noofpkgs</th>
                                <th>WeightInKgs</th>
                                <th>Rate</th>
                                <th>GrossAmount</th>
                                <th>NetAmount</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var docDetail in Model)
                                {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => docDetail.DocumentNo)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.DocumentDate)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.CustomerName)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.ChallanNo)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.PaymentStatus)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.ConsignmentNo)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.FileNo)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.Description)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.Noofpkgs)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.WeightinKgs)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.Rate)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.GrossAmount)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.NetAmount)</td>
                                <td>@Html.DisplayFor(modelItem => docDetail.Remark)</td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#datatable").DataTable({
            "responsive": true
        });

        $("#FromDate").val('@ViewBag.FromDate');
        $("#ToDate").val('@ViewBag.ToDate')

        $("#FromDate").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy',
            maxDate: '0',
            onClose: function (selectedDate, instance) {
                if (selectedDate != '')
                {
                   var fields = selectedDate.split('/');
                    $("#ToDate").datepicker("option", "minDate", new Date(fields[1]+"-"+fields[0]+"-"+fields[3]));
                }
            }
        });

        $("#ToDate").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy',
            maxDate: '0',
        });

          $("#btnSearch").click(function () {
            var isvalid = true;
            var fromDate = $("#FromDate").val();
            var toDate = $("#ToDate").val();

            if (fromDate == "") {
                $("#ErrFromDate").text("Please enter From date");
                isvalid = false;
            }
            else {
                $("#ErrFromDate").text("");
            };

            if (toDate == "") {
                $("#ErrToDate").text("Please enter To date");
                isvalid = false;
            }
            else {
                $("#ErrToDate").text("");
            };

            if (isvalid == false) {
                return false;
            }
        });
    });
</script>

